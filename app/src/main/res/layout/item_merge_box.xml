<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <!-- Repeating Item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="16dp"
        android:background="@drawable/rounded_border">

        <!-- First Contact Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImage1"
                android:layout_width="48dp"
                android:layout_height="48dp"
   />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/firstName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name 1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/phoneNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Phone Number 1"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/profileImage2"
                android:layout_width="48dp"
                android:layout_height="48dp"
              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/firstName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name 2"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/phoneNumber2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number 2"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Merge and Dismiss buttons at the bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mergeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Merge" />

            <Button
                android:id="@+id/dismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Dismiss" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
