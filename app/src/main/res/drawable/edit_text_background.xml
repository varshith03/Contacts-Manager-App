<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners and shadow -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Black border color -->
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="4dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
    <!-- Shadow below the shape -->
    <item android:right="3dp" android:left="3dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#20E8E8E8" /> <!-- Shadow color (adjust as needed) -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
